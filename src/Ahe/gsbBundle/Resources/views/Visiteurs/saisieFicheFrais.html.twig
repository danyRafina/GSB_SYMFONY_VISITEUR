{% extends "AheGsbBundle::layout.html.twig" %}
{% block body %}
    {% block bloc1 %}
        {% include 'AheGsbBundle:Visiteurs:erreurs.html.twig' with {'lesErreurs':lesErreursForfait } %}

        <h2> Fiche de frais du mois {{numMois}}-{{numAnnee}}</h2>
        <form action="{{ path('gsb_saisie_frais') }}" method="POST">
            <div class="corpsForm">    
                <fieldset>
                    <legend>Frais au Forfait : </legend>
                    {% for unFrais in  lesFraisForfait %}
                        {% set idFrais = unFrais.idFrais %}
                        {% set libelle = unFrais.libelle %}
                        {% set quantite = unFrais.quantite %}
                        <p>
                            <label class="col-md-offset-1 col-lg-3" 
                                   for="idFrais"> {{ libelle }} 
                            </label>
                            <input type="text" id="idFrais" 
                                   name="lesFrais[{{ idFrais }}]" 
                                   size="10" maxlength="5" 
                                   value="{{ quantite }}" >
                        </p>


                    {%endfor%}
                </fieldset>
                <fieldset>
                    <legend>Frais hors forfait : </legend>
                    <table border='1' >
                        <tr>
                            <th>date </th>
                            <th> Libéllé</th>
                            <th>Montant</th>
                            <th>Action</th>
                        </tr>


                        {% for item in fhf %}
                            <tr>
                                <td> {{item['date']}}</td>
                                <td> {{item['libelle']}}</td>
                                <td> {{item['montant']}}</td>
                                <td> 
                                    <table border="1"> 
                                        <tr>
                                            <td>
                                                <a href="{{ path('gsb_visiteurs_mod_FhF', {'id': item['idVisiteur'] }) }}" accesskey=""title="Déconnexion">Modifier</a>
                                            </td>
                                            <td>
                                                <a href="{{ path('gsb_visiteurs_sup_FhF',{'id': item['idVisiteur'] }) }}" accesskey=""title="Suppression">Supprimer </a>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            <tr>
                            {%endfor%}
                    </table>
                    <hr>
                    {{form(form)}}
                </fieldset>
                <input class ="btn-success" type="submit" value="Valider" 
                       name="valider">
            </div>    
        </form>

        <a href="/">  </a>
    </div>
{% endblock %}
{% endblock %}  